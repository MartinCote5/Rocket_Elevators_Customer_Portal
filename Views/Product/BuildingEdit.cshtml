@model MvcMovie.Models.Building

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Building</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BuildingEdit">
