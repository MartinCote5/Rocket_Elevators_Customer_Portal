                <span asp-validation-for="email_of_the_administrator_of_the_building" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="phone_number_of_the_building_administrator" class="control-label"></label>
                <input asp-for="phone_number_of_the_building_administrator" class="form-control" />
